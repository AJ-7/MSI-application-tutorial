	<script>

		
		(function() {

			var support = { animations : Modernizr.cssanimations },
				container = document.getElementById( 'ip-container' ),
				header = container.querySelector( 'header.ip-header' );

			function init() {
				startLoading();
				//window.addEventListener('scroll', window.loadingNoscroll);
				classie.add(container, 'loading');
			}

			function startLoading() {
				var interval = setInterval( function() {	
					var finished = false;
					$('.m-app-loading').each(function() {
						if ($(this).hasClass('finished')) {
							finished = true;
						}
					});

					if(finished) {
						classie.remove(container, 'loading');
						classie.add(container, 'loaded');
						clearInterval(interval);
						
						$('.animated-container').css('opacity', '0');
						setTimeout(function() {
							$('.m-app-loading').remove();
						}, 200);

						classie.add(document.body, 'layout-switch');
						window.removeEventListener( 'scroll', window.loadingNoscroll);
					}
				}, 100);
			}
			
			window.loadingNoscroll = function() {
				window.scrollTo( 0, 0 );
			}

			init();

		})();
	
	</script>

